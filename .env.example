# Required for admin login
ADMIN_USER=
ADMIN_PASS=
JWT_SECRET=
# Optional overrides
ADMIN_ALLOW_DEFAULTS=false
ADMIN_LOGIN_FORCE_ENABLE=false

# Admin snapshot -> auto sync to repo
# If you set ADMIN_SNAPSHOT_GIT_TOKEN (or GITHUB_TOKEN), sync is enabled automatically.
ADMIN_SNAPSHOT_GIT_TOKEN=
ADMIN_SNAPSHOT_GIT_ENABLED=true
ADMIN_SNAPSHOT_GIT_DIR=
ADMIN_SNAPSHOT_GIT_REMOTE=origin
ADMIN_SNAPSHOT_GIT_BRANCH=main
ADMIN_SNAPSHOT_GIT_COMMIT_PREFIX=chore(admin): snapshot
ADMIN_SNAPSHOT_GITHUB_REPO=
ADMIN_SNAPSHOT_GITHUB_PATH=data/admin
